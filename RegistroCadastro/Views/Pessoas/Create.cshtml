@model RegistroCadastro.Models.ViewModels.PessoaFormViewModel

@{
    ViewData["Title"] = "Registro";
    
}

<h2>@ViewData["Title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pessoa.Name" class="control-label"></label>
                <input asp-for="Pessoa.Name" class="form-control" />
                <span asp-validation-for="Pessoa.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.BirthDate" class="control-label"></label>
                <input asp-for="Pessoa.BirthDate" class="form-control" />
                <span asp-validation-for="Pessoa.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pessoa.Sexo" class="control-label"></label>
                <input asp-for="Pessoa.Sexo" class="form-control"></input>
                <span asp-validation-for="Pessoa.Sexo" class="text-danger"></span>

            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
